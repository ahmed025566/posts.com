<h2 class="center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :Name , placeholder: "Name", class:("signupField")%>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@example.com", class:("signupField") %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password (6 characters minimum)", class:("signupField") %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "password_confirmation", class:("signupField")%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class: ("btn")%>
  </div>
<% end %>

<%= render "devise/shared/links" %>